@using SdojWeb.Models.ContestModels
@model ContestCreateModel

@{
    ViewBag.Title = "创建考试";
}

<div class="row">
    <div class="col-xs-12">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-xs-12">
        @using (Html.BeginForm("Create", "Contest", FormMethod.Post, new { id = "create-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>题目</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.EditorForModel()

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="创建" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
