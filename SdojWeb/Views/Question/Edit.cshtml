@model SdojWeb.Models.QuestionDetailViewModel

@{
    ViewBag.Title = "编辑";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>题目</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.Title)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.Description)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.SampleInput)
            <div class="col-md-10">
                @Html.EditorFor(model => model.SampleInput, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
                @Html.ValidationMessageFor(model => model.SampleInput, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.SampleOutput)
            <div class="col-md-10">
                @Html.EditorFor(model => model.SampleOutput, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
                @Html.ValidationMessageFor(model => model.SampleOutput, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.MemoryLimitMB)
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemoryLimitMB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemoryLimitMB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.TimeLimit)
            <div class="col-md-10">
                @Html.EditorFor(model => model.TimeLimit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TimeLimit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
