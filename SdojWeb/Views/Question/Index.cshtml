@using PagedList
@using PagedList.Mvc
@using SdojWeb.Models
@model IEnumerable<QuestionSummaryViewModel>

@{
    ViewBag.Title = "题目列表";
    var pagedList = Model as IPagedList<QuestionSummaryViewModel>;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("创建题目", "Create")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemoryLimitMb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeLimit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemoryLimitMb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeLimit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime)
        </td>
        <td>
            @Html.ActionLink("测试数据", "ListForQuestion", "QuestionData", new {id = item.Id}, null) |
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<br/>
<p>第 @pagedList.PageNumber 页，共 @pagedList.PageCount 页 </p>
@Html.PagedListPager(pagedList, page => Url.Action("Index", new {page}))