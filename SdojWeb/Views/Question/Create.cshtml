@model SdojWeb.Models.QuestionCreateModel

@{
    ViewBag.Title = "创建";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Create", "Question", FormMethod.Post, new {id="create-form"})) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>题目</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorForModel()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>

@using (Ajax.BeginForm("CheckName", "Question", new AjaxOptions {OnSuccess = "checkFinished"}, new {id="check-form"}))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="name"/>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
    <script>
        $("form input[name='Name']").focusout(function() {
            $("#check-form input[name='name']").val($(this).val());
            $("#check-form").submit();
        });

        function checkFinished(result) {
            
        };
    </script>
}
