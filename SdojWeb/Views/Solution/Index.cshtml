@using PagedList
@using PagedList.Mvc
@using SdojWeb.Infrastructure.Extensions
@using SdojWeb.Models
@model IEnumerable<SolutionSummaryModel>

@{
    ViewBag.Title = "解答列表";
}

<h2>@ViewBag.Title</h2>

@if (User.Identity.IsAuthenticated)
{
    @(ViewBag.OnlyMe ? 
        Html.ActionLink("查看所有解答", "Index", new {onlyme = false}) : 
        Html.ActionLink("仅看我的解答", "Index", new {onlyme = true}))
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SourceLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RunTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsingMemoryMb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubmitTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateUserName)
        </td>
        <td>
            @Html.ActionLink(item.QuestionName, "Details", "Question", new {id=item.QuestionId}, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SourceLength)
        </td>
        <td id="state-@item.Id">
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RunTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsingMemoryMb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubmitTime)
        </td>
        <td>
            <a href="@Url.Action("Details", new {id=item.Id})" title="源代码" class="glyphicon glyphicon-file"></a>
            @Html.DeleteIcon(item.Id)
        </td>
    </tr>
}
</table>

<div>
    @{var pagedList = Model as IPagedList<SolutionSummaryModel>;}
    第 @pagedList.PageNumber 页，共 @pagedList.PageCount 页
    @Html.PagedListPager(pagedList, page => Url.Action("Index", new { page, onlyme = ViewBag.OnlyMe }))
</div>

@using (Html.BeginForm("Delete", "Solution", FormMethod.Post, new {id = "delete-form"}))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id"/>
}

@section scripts
{
    @Scripts.Render("~/bundles/signalr")
    <script src="~/signalr/hubs"></script>

    <script>
        $(".delete-link").click(function() {
            var id = $(this).data('id');
            if (confirm('确定要删除此解答吗？')) {
                $("#delete-form input[name='id']").val(id);
                $("#delete-form").submit();
            }
        });

        var shub = $.connection.solutionHub;
        shub.client.push = function(id, name) {
            $("#state-" + id).text(name);
        };
        $.connection.hub.start();
    </script>
}
